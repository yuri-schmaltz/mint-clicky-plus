<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.x.clickyplus" path="/org/x/clickyplus/">
    <key type="b" name="prefer-dark-mode">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="s" name="capture-mode">
      <choices>
        <choice value='screen'/>
        <choice value='window'/>
        <choice value='area'/>
      </choices>
      <default>'screen'</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="i" name="delay">
      <default>0</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="include-pointer">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="add-shadow">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="enable-flash">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="include-borders">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="enable-sound">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="enable-dbus-method">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="set-as-default">
      <default>false</default>
      <summary>Set as default screenshot tool</summary>
      <description>When enabled, Clicky Plus replaces the system screenshot tool by taking over standard keyboard shortcuts.</description>
    </key>
    <key type="s" name="save-directory">
      <default>''</default>
      <summary>Directory to save screenshots</summary>
      <description>The directory where screenshots will be saved. If empty, defaults to XDG Pictures directory.</description>
    </key>
    <key type="b" name="auto-copy-clipboard">
      <default>false</default>
      <summary>Automatically copy to clipboard</summary>
      <description>If true, screenshots are copied to clipboard automatically after capture.</description>
    </key>
    <key type="s" name="file-format">
      <choices>
        <choice value='png'/>
        <choice value='jpg'/>
        <choice value='webp'/>
      </choices>
      <default>'png'</default>
      <summary>File format</summary>
      <description>The file format for saved screenshots.</description>
    </key>
    <key type="s" name="filename-pattern">
      <default>'Screenshot from %Y-%m-%d %H-%M-%S'</default>
      <summary>Filename pattern</summary>
      <description>strftime pattern for the filename.</description>
    </key>
  </schema>
</schemalist>
