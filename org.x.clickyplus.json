{
    "app-id": "org.x.clickyplus",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "clicky",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-run/dconf",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "python3-pillow",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app --no-deps ."
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/python-pillow/Pillow.git",
                    "tag": "10.2.0"
                }
            ]
        },
        {
            "name": "clickyplus",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/lib/clicky",
                "cp -r usr/lib/clicky/* /app/lib/clicky/",
                "mkdir -p /app/share/clicky",
                "cp usr/share/clicky/* /app/share/clicky/",
                "mkdir -p /app/share/glib-2.0/schemas",
                "cp usr/share/glib-2.0/schemas/*.xml /app/share/glib-2.0/schemas/",
                "mkdir -p /app/bin",
                "echo '#!/bin/bash' > /app/bin/clicky",
                "echo 'exec python3 /app/lib/clicky/clicky.py \"$@\"' >> /app/bin/clicky",
                "chmod +x /app/bin/clicky"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
